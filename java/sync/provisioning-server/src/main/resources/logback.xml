<?xml version="1.0" encoding="UTF-8" ?>

<configuration scan="true" scanPeriod="60 seconds">

        <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

        <include file="/etc/obm-provisioning/logback.xml" optional="true" />
        
        <property scope="context" name="defaultLogDir" value="/var/log/obm-provisioning" />
        
        <appender name="PROD" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <File>${logDir:-${defaultLogDir}}/obm-provisioning.log</File>
                <encoder>
                        <pattern>%d{${time-pattern:-"HH:mm:ss.SSS"}} [%-5level] {%logger{32}} [t%X{threadId}/r%X{requestId}/%X{user}] %msg%n</pattern>
                </encoder>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                        <maxHistory>30</maxHistory>
                        <fileNamePattern>${logDir:-${defaultLogDir}}/obm-provisioning.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                        <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                                <maxFileSize>200MB</maxFileSize>
                        </timeBasedFileNamingAndTriggeringPolicy>
                </rollingPolicy>
        </appender>

        <root level="WARN">
                <appender-ref ref="PROD" />
        </root>

</configuration>
